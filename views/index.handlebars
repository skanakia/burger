<div class="container">
    <div class="uneaten">
        <ul>
            {{#each burger}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
        </ul>
    </div>


    <div class="devoured">
        <ul>
            {{#each burger}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
        </ul>
    </div>

    <div class="central">
        <img height="200px" width="200px" class="image" src="/assets/img/burger.jpg">
        <h2 class="header">Add a burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="burg">Burger:</label>
                <input type="text" id="burg" name="name">
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>