<div class="uneaten">
    <ul>
        {{#each burger}}
        {{#unless eaten}}
            {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
    </ul>
</div>


<div class="devoured">
    <ul>
        {{#each burger}}
        {{#if eaten}}
            {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
    </ul>
</div>

<div class="central">
    <h2>Add a burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="burg">Burger:</label>
            <input type="text" id="burg" name="name">
        </div>

        <button type="submit">Add Burger</button>
    </form>
</div>